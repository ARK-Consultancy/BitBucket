<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_import_images_form" model="ir.ui.view">
            <field name="name">product.image.form</field>
            <field name="model">product.image</field>
            <field name="arch" type="xml">
                <form>
                    <field name="file_name"/>
                    <footer>
                        <button string="Import Images" name="import_images" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_images_form" model="ir.actions.act_window">
            <field name="name">Import Images</field>
            <field name="res_model">product.image</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_images_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
